{
  "manifest_version": 2,

  "name": "FBMeet",
  "description": "Integrates Facebook chat with events.",
  "version": "2.0",

  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["model/authorizer.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/", "*://www.facebook.com/*"],
      "css": ["view/style.css"],
      "js": [
        "lib/lib.js", 
        "lib/jquery.js", 
        "init.js", 
        "model/event.js",
        "view/templates.js",
        "view/listener.js",
        "view/chat.js",
        "view/load.js"
      ]
    }
  ]
}