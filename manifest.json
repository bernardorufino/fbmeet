{
  "manifest_version": 2,

  "name": "FBMeet",
  "description": "Integrates Facebook chat with events.",
  "version": "2.0",

  "permissions": [
    "tabs",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "lib/utils.js",
      "lib/purl.js", 
      "model/authorizer.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "exclude_matches": ["*://www.facebook.com/connect/*", "*://www.facebook.com/dialog/*"],
      "css": ["view/style.css"],
      "js": [
        "lib/utils.js", 
        "lib/jquery.js", 
        "lib/fbutils.js", 
        "init.js", 
        "model/event.js",
        "view/templates.js",
        "view/listener.js",
        "view/chat.js"
      ]
    }
  ]
}